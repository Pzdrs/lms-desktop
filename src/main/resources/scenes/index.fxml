               </menus>
            </MenuBar>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                     <children>
                        <Label fx:id="booksTotal" text="{booksTotal}">
                           <font>
                              <Font size="30.0" />
                           </font></Label>
                        <Label text="BOOKS IN TOTAL" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                     <children>
                        <Label fx:id="booksActive" text="{booksActive}">
                           <font>
                              <Font size="30.0" />
                           </font></Label>
                        <Label text="BOOKS BEING READ" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                     <children>
                        <Label fx:id="users" text="{users}">
                           <font>
                              <Font size="30.0" />
                           </font></Label>
                        <Label text="ACTIVE USERS" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
